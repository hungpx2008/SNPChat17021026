# ==========================================
# ðŸš€ CHATSNP CENTRALIZED CONFIGURATION
# ==========================================

# --- 1. POSTGRESQL (Database) ---
POSTGRES_USER=chatsnp
POSTGRES_PASSWORD=secure_password_here
POSTGRES_DB=chatsnp
POSTGRES_PORT=5432

# --- 2. REDIS (Cache) ---
REDIS_PORT=6379

# --- 3. QDRANT (Vector DB) ---
QDRANT_PORT_HTTP=6333
QDRANT_PORT_GRPC=6334
QDRANT_API_KEY=secondary_security_key_here

# --- 4. BACKEND (FastAPI - Port 8000) ---
# Connection strings (Use service names 'postgres', 'redis', 'qdrant', 'mem0' for Docker)
DATABASE_URL=postgresql+asyncpg://chatsnp:secure_password_here@postgres:5432/chatsnp
REDIS_URL=redis://redis:6379/0
QDRANT_URL=http://qdrant:6333
MEM0_URL=http://mem0:8000

# Backend Settings
CHAT_MAX_SESSIONS=100
CHAT_CACHE_WINDOW=20
CHAT_CHUNK_SIZE=512
# CORS - Add your production domain here
CORS_ALLOW_ORIGINS=["http://localhost:3000","https://your-domain.com"]

# --- 5. MEM0 SERVICE (AI Memory - Port 8888) ---
# AI Provider Keys (At least one required)
OPENAI_API_KEY=sk-or-v1-your-key
OPENAI_BASE_URL=https://openrouter.ai/api/v1
OPENROUTER_API_KEY=sk-or-v1-your-key
OPENROUTER_API_BASE=https://openrouter.ai/api/v1
GOOGLE_API_KEY=

# Mem0 Configuration
LLM_PROVIDER=openai
LLM_MODEL=openai/gpt-5-nano
EMBEDDER_PROVIDER=huggingface
EMBEDDER_MODEL=thanhtantran/Vietnamese_Embedding_v2
EMBEDDING_DIM=1024
QDRANT_HOST=qdrant
QDRANT_PORT=6333
QDRANT_COLLECTION=mem0_memories
GRAPH_STORE_PROVIDER=off
HISTORY_DB_PATH=/app/history/history.db
HF_TOKEN=hf_your_huggingface_token

# --- 6. FRONTEND (Next.js - Port 3000) ---
# IMPORTANT: Frontend variables are baked at build time.
# In Docker, these are passed via build args or environment.

NEXT_PUBLIC_BACKEND_URL=http://localhost:8000
# Internal URL for Server-Side Rendering (SSR) to talk to Backend within Docker network
BACKEND_INTERNAL_URL=http://backend:8000

# Firebase Config (Client Side)
NEXT_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your-project-id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
NEXT_PUBLIC_FIREBASE_APP_ID=your_app_id
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=

# AI Model for Client Display
NEXT_PUBLIC_LOCAL_LLM_MODEL=openai/gpt-5-nano
